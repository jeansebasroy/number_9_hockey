<% provide(:title, "Edit My Info") %>
<h1>Update your profile</h1>

<div class="row">
  <div class="span6 offset3">
  	<div align="center">
	    <%= form_for(@user) do |user| %>
	      <%= render 'users_form', user: user %>
	      
	      <%= user.submit "Save Changes", class: "btn btn-large btn-primary" %>
	    <% end %>
	</div>
  </div>
</div>