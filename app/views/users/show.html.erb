<% provide(:title, "Profile for #{@user.first_name}") %>
<%# provide(:title, @user.last_name, @user.first_name) %>
<h1>My Profile</h1>
<p>First Name: <%= @user.first_name %> </p>
<p>Last Name: <%= @user.last_name %> </p>
<p>e-mail:  <%= @user.email %> </p>
<p><%= link_to 'Edit', edit_user_path(@user) %> </p>

<% if !@players.empty? %>
	<h1>My Player(s):</h1>

	<% @players.each do |player| %>
		<p>First Name: <%= player.first_name %> </p>
		<p>Last Name: <%= player.last_name %> </p>
		<p>Date of Birth:  <%= player.date_of_birth %> </p>	
		<p>Shoots:  <%= player.shoots %> </p>
		<p><%#= link_to 'Edit', player_path(player) %> </p>
		<br>
	<% end %>
<% end %>

<% if !@coach.empty? %>
	<h1>My Coach's Profile:</h1>

	<p>First Name: <%= @coach.first_name %> </p>
	<p>Last Name: <%= @coach.last_name %> </p>
	<p>Date of Birth:  <%= @coach.date_of_birth %> </p>	
	<p>Shoots:  <%= @coach.shoots %> </p>
	<p><%#= link_to 'Edit', coach_path(@coach) %> </p>

<% end %>

