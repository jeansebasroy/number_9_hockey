<%= render 'shared/error_messages', object: date.object %>

<%= date.label :date, 'Date (yyyy-mm-dd):'  %>
<%= date.date_field :date %>

<%= date.label :start_time, 'Start Time (hh:mm, Military Time):' %>
<%= date.time_field :start_time %>	

<%= date.label :end_time, 'End Time (hh:mm, Military Time):' %>
<%= date.time_field :end_time %>

<%= date.label :rink_id, 'Select Rink:' %>
<%= date.select :rink_id, options_from_collection_for_select(Rink.all, :id, :name) %>

<%= date.hidden_field :camp_id, value: @camp.id %>